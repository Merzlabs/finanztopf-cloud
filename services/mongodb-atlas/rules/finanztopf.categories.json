{
    "database": "finanztopf",
    "collection": "categories",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "owner": "%%user.id"
            },
            "fields": {
                "creditorName": {},
                "remittanceInformation": {},
                "title": {}
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        },
        {
            "name": "non-owner",
            "apply_when": {},
            "fields": {
                "creditorName": {
                    "read": true
                },
                "remittanceInformation": {
                    "read": true
                },
                "title": {
                    "read": true
                },
                "id": {
                    "read": true
                }
            },
            "write": false,
            "insert": false,
            "delete": false,
            "additional_fields": {}
        }
    ],
    "schema": {
        "title": "category",
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "creditorName": {
                "bsonType": "array",
                "items": {
                    "bsonType": "string"
                }
            },
            "id": {
                "bsonType": "string"
            },
            "sum": {
                "bsonType": "int"
            },
            "title": {
                "bsonType": "string"
            }
        }
    }
}
